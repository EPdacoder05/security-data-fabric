# Environment
ENVIRONMENT=development  # development, staging, production

# Application
APP_NAME=security-data-fabric
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://sdf_user:sdf_password@postgres:5432/security_data_fabric
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Dynatrace Integration
DYNATRACE_BASE_URL=https://your-tenant.dynatrace.com/api/v2
DYNATRACE_API_TOKEN=dt0c01.XXXXXXXXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Splunk Integration
SPLUNK_BASE_URL=https://splunk.example.com:8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=changeme
SPLUNK_BEARER_TOKEN=

# ServiceNow Integration
SERVICENOW_INSTANCE=https://your-instance.service-now.com
SERVICENOW_USERNAME=api_user
SERVICENOW_PASSWORD=changeme
SERVICENOW_CLIENT_ID=
SERVICENOW_CLIENT_SECRET=

# PagerDuty Integration
PAGERDUTY_API_KEY=v2.your_api_key_here
PAGERDUTY_INTEGRATION_KEY=your_integration_key_here
PAGERDUTY_FROM_EMAIL=alerts@example.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WORKSPACE/YOUR_CHANNEL/YOUR_TOKEN_HERE
SLACK_DEFAULT_CHANNEL=#security-alerts

# GitHub Integration
GITHUB_TOKEN=ghp_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ML Configuration
ML_MODEL_PATH=./models
ML_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
ML_ANOMALY_THRESHOLD=3.0
ML_CONFIDENCE_THRESHOLD=0.7

# Correlation & Analysis
CORRELATION_TIME_WINDOW_MINUTES=5
DEDUP_TIME_WINDOW_MINUTES=5
TIMELINE_LOOKBACK_HOURS=24

# Alerting
ALERT_DEDUP_WINDOW_MINUTES=10
ALERT_ESCALATION_DELAY_MINUTES=15

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_AUTO_TICKETING=false
