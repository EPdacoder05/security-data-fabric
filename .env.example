# Database Configuration
DATABASE_URL=postgresql+asyncpg://sdf_user:sdf_password@postgres:5432/sdf_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Dynatrace Integration
DYNATRACE_URL=https://your-environment.live.dynatrace.com
DYNATRACE_API_TOKEN=your-dynatrace-api-token
DYNATRACE_POLL_INTERVAL=60

# Splunk Integration
SPLUNK_URL=https://your-splunk-instance.com:8089
SPLUNK_TOKEN=your-splunk-token
SPLUNK_INDEX=security

# ServiceNow Integration
SERVICENOW_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# PagerDuty Integration
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_INTEGRATION_KEY=your-integration-key

# GitHub Integration
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ML Configuration
ANOMALY_WARNING_THRESHOLD=1.5
ANOMALY_CRITICAL_THRESHOLD=3.0
ANOMALY_EXTREME_THRESHOLD=4.5
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Correlation Configuration
CORRELATION_WINDOW_MINUTES=30

# Alert Configuration
ALERT_COOLDOWN_MINUTES=15
