# ============================================================================
# AZURE KEY VAULT (Production - Non-Sensitive)
# ============================================================================
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET stored in Azure Key Vault

# ============================================================================
# DATABASE (Non-Sensitive)
# ============================================================================
DB_HOST=postgres.database.azure.com
DB_PORT=5432
DB_NAME=security_data_fabric
DB_USER=sdf_app
# DB_PASSWORD stored in Azure Key Vault: secret name "db-password"
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_RECYCLE=3600
DB_QUERY_TIMEOUT=5
DB_POOL_TIMEOUT=10

# ============================================================================
# REDIS (Non-Sensitive)
# ============================================================================
REDIS_HOST=redis.cache.azure.com
REDIS_PORT=6380
REDIS_DB=0
REDIS_SSL=true
REDIS_POOL_MAX=20
# REDIS_PASSWORD stored in Azure Key Vault: secret name "redis-password"

# ============================================================================
# ENCRYPTION
# ============================================================================
# ENCRYPTION_KEY stored in Azure Key Vault: secret name "encryption-key"
# JWT_SIGNING_KEY stored in Azure Key Vault: secret name "jwt-signing-key"

# ============================================================================
# OKTA MFA (Non-Sensitive)
# ============================================================================
OKTA_DOMAIN=your-company.okta.com
OKTA_CLIENT_ID=your-okta-client-id
# OKTA_CLIENT_SECRET stored in Azure Key Vault: secret name "okta-client-secret"

# ============================================================================
# OPENAI (Non-Sensitive)
# ============================================================================
# OPENAI_API_KEY stored in Azure Key Vault: secret name "openai-api-key"
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_CACHE_MAX_SIZE=100000
EMBEDDING_CACHE_TTL_HOURS=24

# ============================================================================
# CIRCUIT BREAKER
# ============================================================================
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# ============================================================================
# VECTOR DB
# ============================================================================
VECTOR_DB_TYPE=pgvector  # or weaviate for future migration

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=production  # development, staging, production
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1
CORS_ORIGINS=https://dashboard.example.com,https://app.example.com

# ============================================================================
# DATA SOURCE CONNECTORS (Non-Sensitive URLs)
# ============================================================================
DYNATRACE_URL=https://your-environment.dynatrace.com
SPLUNK_URL=https://splunk.example.com:8089
SERVICENOW_URL=https://your-instance.service-now.com
PAGERDUTY_URL=https://api.pagerduty.com
GITHUB_URL=https://api.github.com

# Connector API tokens stored in Azure Key Vault:
# - dynatrace-api-token
# - splunk-token
# - servicenow-token
# - pagerduty-token
# - github-token

# ============================================================================
# ML & ANALYTICS
# ============================================================================
ANOMALY_WARNING_THRESHOLD=1.5
ANOMALY_CRITICAL_THRESHOLD=3.0
CORRELATION_WINDOW_MINUTES=30

# ============================================================================
# PROMETHEUS METRICS
# ============================================================================
METRICS_PORT=9090
METRICS_PATH=/metrics

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
